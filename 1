Best-Cover = 
VAR CurrentTradeDate = [trade date]
VAR CurrentTradeTime = [tradetime]

VAR Yield_Acc = 
    CALCULATE(
        AVERAGE('YourTable'[yield]),
        FILTER(
            'YourTable',
            'YourTable'[trade date] = CurrentTradeDate &&
            'YourTable'[tradetime] = CurrentTradeTime &&
            ('YourTable'[tradestate] = "Acc" || 'YourTable'[tradestate] = "Acct")
        )
    )

VAR Yield_Covr = 
    CALCULATE(
        AVERAGE('YourTable'[yield]),
        FILTER(
            'YourTable',
            'YourTable'[trade date] = CurrentTradeDate &&
            'YourTable'[tradetime] = CurrentTradeTime &&
            'YourTable'[tradestate] = "Covr"
        )
    )

RETURN
    IF(
        NOT(ISBLANK(Yield_Acc)) && NOT(ISBLANK(Yield_Covr)),
        Yield_Acc - Yield_Covr,
        BLANK()
    )
